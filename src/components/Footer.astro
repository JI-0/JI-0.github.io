<style>
    div.icons {
        display: flex;
		    justify-content: center;
	  }

    .icons div {
        display: inline-block;
        padding: 0 0.25rem 0 0.25rem;
    }

    div {
        margin-top: 1.2rem;
        margin-bottom: 1.2rem;
        text-align: center;
    }

    small {
        font-family: 'Josefin Sans', sans-serif; 
    }

    small a {
        text-decoration: none;
    }

</style>
