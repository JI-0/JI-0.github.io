const year = new Date().getFullYear();
const { hidden=false } = Astro.props;
---
<footer>
    <div hidden={hidden}>
        <div data-aos="fade-in" data-aos-delay="300">
            <div class="icons">
                <div><a href="https://github.com/JI-0" target="_blank" class="foot-btn"><span class="git-icon">GitHub</span></a></div>
                <div><a href="mailto: janivkovic11111@gmail.com" class="foot-btn"><span class="mail-icon">Email</span></a></div>
            </div>
        </div>
        <small class="cr">&copy; {year} <a href="https://github.com/JI-0">JI-0</a>. All Rights Reserved.</small>
